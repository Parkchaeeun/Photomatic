<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.google.sample.cloudvision.JoinActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/buttonshape">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원 가입"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title"
            android:textColor="#ffffff"
            android:textSize="20sp"
            />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#A4A4A4"
        android:text="간단하게 가입하세요!" />

    <TextView
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#A4A4A4"
        android:gravity="center_horizontal"
        android:text="1분도 걸리지 않는 회원가입으로 포토매틱을 이용하세요."
        />

    <EditText
        android:drawableLeft="@drawable/email"
        android:drawablePadding="5dip"
        android:layout_marginTop="80dp"
        android:id="@+id/joinEmail"
        android:hint="이메일 주소"
        android:textSize="15sp"
        android:layout_width="330dp"
        android:layout_height="40dp" />

    <EditText
        android:drawableLeft="@drawable/profile"
        android:drawablePadding="5dip"
        android:layout_marginTop="20dp"
        android:id="@+id/joinName"
        android:hint="이 름"
        android:textSize="15sp"
        android:layout_width="330dp"
        android:layout_height="40dp" />

    <EditText
        android:drawableLeft="@drawable/pass"
        android:drawablePadding="5dip"
        android:layout_marginTop="20dp"
        android:inputType="textPassword"
        android:id="@+id/joinPw"
        android:hint="비밀번호"
        android:textSize="15sp"
        android:layout_width="330dp"
        android:layout_height="40dp" />

    <EditText
        android:drawableLeft="@drawable/pass"
        android:drawablePadding="5dip"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:id="@+id/joinPw2"
        android:hint="비밀번호 확인"
        android:textSize="15sp"
        android:layout_width="330dp"
        android:layout_height="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginLeft="88dp"
        android:id="@+id/tx2"
        android:textColor="#ff3a5e"
        android:textSize="12sp"
        android:letterSpacing="0.01"
        android:text="입력하신 비밀번호와 일치하지 않습니다."/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginLeft="88dp"
        android:id="@+id/tx3"
        android:textColor="#ff3a5e"
        android:textSize="12sp"
        android:letterSpacing="0.01"
        android:text="모든 항목을 입력해주세요."/>

    <Button
        android:textColor="#ffffff"
        android:background="@drawable/buttonshape"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="135dp"
        android:text="회원가입"
        android:id="@+id/btnJoin"/>

</LinearLayout>
