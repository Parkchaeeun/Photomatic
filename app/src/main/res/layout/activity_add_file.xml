<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.google.sample.cloudvision.AddFileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="580dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/add_file_iv1"
                    android:layout_width="200dp"
                    android:layout_height="200dp" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/add_file_iv2"
                    android:layout_width="200dp"
                    android:layout_height="200dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/add_file_iv3"
                    android:layout_width="200dp"
                    android:layout_height="200dp" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/add_file_iv4"
                    android:layout_width="200dp"
                    android:layout_height="200dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:visibility="gone"
                    android:id="@+id/add_file_iv5"
                    android:layout_width="200dp"
                    android:layout_height="200dp" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/add_file_iv6"
                    android:layout_width="200dp"
                    android:layout_height="200dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:textColor="#ffffff"
        android:background="@drawable/buttonshape"
        android:layout_width="match_parent"
        android:layout_height="70dp"

        android:text="파일 추가"
        android:id="@+id/btn_addFile"/>

</LinearLayout>
