<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main2Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:letterSpacing="-0.03"
        android:text="My Photo"
        android:textStyle="bold"
        android:textSize="40sp" />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:text="-----------------------------"
        android:textColor="#f0f0f0"/>

    <ScrollView
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="500dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#4a4a4a"
                android:text="인물"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/profile1"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />

                    <Button
                        android:id="@+id/profile2"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />

                    <Button
                        android:id="@+id/profile3"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#4a4a4a"
                android:text="풍경"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/landscape1"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />

                    <Button
                        android:id="@+id/landscape2"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />

                    <Button
                        android:id="@+id/landscape3"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#4a4a4a"
                android:text="동물"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/animal1"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />

                    <Button
                        android:id="@+id/animal2"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />

                    <Button
                        android:id="@+id/animal3"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#4a4a4a"
                android:text="문자"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/text1"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />

                    <Button
                        android:id="@+id/text2"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />

                    <Button
                        android:id="@+id/text3"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#4a4a4a"
                android:text="음식"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/food1"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />

                    <Button
                        android:id="@+id/food2"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />

                    <Button
                        android:id="@+id/food3"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#4a4a4a"
                android:text="그림"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/picture1"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />

                    <Button
                        android:id="@+id/picture2"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />

                    <Button
                        android:id="@+id/picture3"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/addFolder"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:text="폴더 추가하기"
        android:textColor="#ffffff"
        android:background="@drawable/buttonshape" />



</LinearLayout>