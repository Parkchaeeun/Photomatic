<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.google.sample.cloudvision.LoginActivity">

    <ImageView
        android:layout_width="156dp"
        android:layout_height="148dp"
        android:id="@+id/imageView"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="62dp"
        android:src="@drawable/photomatic2"
        android:visibility="visible"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="26dp"
        android:textColor="#4a4a4a"
        android:text="만나서 반갑습니다."
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:textColor="#4a4a4a"
        android:text="로그인 해주세요."
        android:textSize="20sp"/>

    <EditText
        android:layout_width="325dp"
        android:layout_height="40dp"
        android:hint="이메일 주소"
        android:id="@+id/loginEmail"
        android:drawableLeft="@drawable/email"
        android:drawablePadding="5dip"
        android:textSize="14sp"
        android:textColor="#9b9b9b"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"/>

    <EditText
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:hint="비밀번호"
        android:drawableLeft="@drawable/pass"
        android:drawablePadding="5dip"
        android:id="@+id/loginPw"
        android:textSize="14sp"
        android:inputType="textPassword"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginLeft="230dp"
        android:id="@+id/tx"
        android:textColor="#ff3a5e"
        android:textSize="12sp"
        android:letterSpacing="0.01"
        android:text="로그인에 실패하였습니다." />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginLeft="230dp"
        android:id="@+id/tx3"
        android:textColor="#ff3a5e"
        android:textSize="12sp"
        android:letterSpacing="0.01"
        android:text="정보가 입력되지 않았습니다." />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_marginLeft="230dp"
        android:id="@+id/tx2"
        android:textColor="#ff3a5e"
        android:textSize="12sp"
        android:letterSpacing="0.01"
        />
    <Button
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="40dp"
        android:text="Login"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:background="@drawable/buttonshape"
        android:id="@+id/btnLogin"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="97dp"
            android:id="@+id/textViewforPW"
            android:layout_marginTop="5dp"
            android:textColor="#4a4a4a"
            android:letterSpacing="0.01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호 찾기"/>

        <TextView
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4a4a4a"
            android:textSize="17dp"
            android:text="|"/>

        <TextView
            android:layout_marginLeft="30dp"
            android:id="@+id/textViewforJoin"
            android:layout_marginTop="5dp"
            android:textColor="#4a4a4a"
            android:letterSpacing="0.01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"/>

    </LinearLayout>



</LinearLayout>
